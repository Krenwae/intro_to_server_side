<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head'); %>
</head>

<body>

    <%- include('partials/nav'); %>

    <!-- Page Content -->
    <div class="container">

        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>
                  Movie App
                  <!-- A Bootstrap Starter Template -->
                </h1>
                <p class="lead">All my movies in one place</p>

            </div>
        </div>

        <div class="row">
          <div class="col-lg-12 text-center">
            <table class="table">
              <thead>
                <tr>
                  <td>Title</td>
                  <td>Year</td>
                </tr>
              </thead>
              <tbody>
                <% for(i=0; i < movieList.length; i++){ %>
                  <tr>
                    <td><%= movieList[i].title %></td>
                    <td><%= movieList[i].year %></td>
                    <td>
                      <form method="POST" action="/movies/ <%= movieList[i]._id %> ?_method=delete" enctype="application/x-www-form-urlencoded">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                      </form>
                    </td>
                  </tr>
                  <% } %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-12 text-center">
            <h1>
              Add a new movie to your collection
            </h1>
            <form method="post" action="/movies">
              <input type="text" name="title">
              <input type="text" name="year">
              <input type="submit"/>
            </form>
          </div>
        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->

    <!-- jQuery Version 1.11.1 -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>

</html>
